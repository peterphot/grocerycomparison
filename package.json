{
  "name": "grocerycomparison",
  "private": true,
  "workspaces": [
    "packages/*",
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=backend\" \"npm run dev --workspace=frontend\"",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "playwright test",
    "mock-server": "tsx e2e/fixtures/mock-server.ts",
    "build": "npm run build --workspaces --if-present"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/cors": "^2",
    "@types/express": "^5",
    "concurrently": "^9.2.1",
    "cors": "^2",
    "express": "^4",
    "tsx": "^4",
    "typescript": "^5"
  },
  "comments": {
    "devDependencies": "express, cors, and their @types are duplicated from backend/ because the E2E mock server (e2e/fixtures/mock-server.ts) runs from root context via tsx"
  }
}
